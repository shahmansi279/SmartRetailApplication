        android:layout_height="100dp"
        android:layout_alignLeft="@+id/imageButton1"
        android:layout_alignStart="@+id/imageButton1"
        android:layout_below="@+id/imageButton1"
        android:layout_marginTop="30dp"
        android:src="@drawable/movies"
        android:onClick="movies"
        android:contentDescription="Movies" />

    <ImageButton
        android:id="@+id/imageButton4"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignLeft="@+id/imageButton2"
        android:layout_alignStart="@+id/imageButton2"
        android:layout_alignTop="@+id/imageButton3"
        android:src="@drawable/map"
        android:onClick="map"
        android:contentDescription="Indoor Map" /> -->

    <ImageButton
        android:id="@+id/imageButton5"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignLeft="@+id/imageButton1"
        android:layout_alignStart="@+id/imageButton1"
        android:layout_below="@+id/imageButton1"
        android:layout_marginTop="30dp"
        android:src="@drawable/event"
        android:onClick="events"
        android:contentDescription="Events" />

    <ImageButton
        android:id="@+id/imageButton6"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignLeft="@+id/imageButton2"
        android:layout_alignStart="@+id/imageButton2"
        android:layout_alignTop="@+id/imageButton5"
        android:src="@drawable/offer"
        android:onClick="offers"
        android:contentDescription="Offers" />

